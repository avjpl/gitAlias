[user]
	name = Adrian Lawrence
	email = avjpldeveloper@aol.com

[alias]
	# Tag aliases
	lasttag = describe --tags --abbrev=0
	lt = describe --tags --abbrev=0

	# List aliases
	la = "!git config -l | grep alias | cut -c 7-"

	# Searching
	f = "!git ls-files | grep -i"
	grep = grep -Ii
	gr = grep -Ii

	# Logs
	l = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	lnc = log --pretty=format:"%h\\ %s\\ [%cn]"
	le = log --oneline --decorate
	filelog = log -u
 	fl = log -u
	dl = "!git ll -1"
	dlc = diff --cached HEAD^

	# Remove branches
	dlb = branch -d # local
	drb = push origin --delete # remote

	# Basic Shortcuts
	cp = cherry-pick
	st = status -s
	cl = clone
	ci = commit
	cim = commit -m
	co = checkout
	br = branch
	bra = branch --all
	diff = diff --word-diff
	dc = diff --cached
	r = remote
	rv = remote -v
	p = pull
	pr = pull --rebase
	pom = push origin main
	com = checkout main
  	po = push origin

	# Undo commit(s)
  	sr1 = reset --soft HEAD~1
	hr1 = reset --hard HEAD~1

	# merge
	m = merge --no-ff main -m

	# Reset
	r = reset
	r1 = reset HEAD^
	r2 = reset HEAD^^
	rh = reset --hard
	rh1 = reset HEAD^ --hard
	rh2 = reset HEAD^^ --hard

	# Stach
	sl = stash list
	sa = stash apply
	ss = stash save
	sp = stash pop

	k = !gitk
[push]
	default = simple
[core]
	excludesfile = /Users/avjpl/.gitignore_global
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
